class CheaterState extends MusicBeatState
{
	var warnText:FlxText;
    var leftState:Bool = false;

    var cheaterSong:String = "cheating";
	override function create()
	{
		super.create();

		var bg:FlxSprite = new FlxSprite().makeGraphic(FlxG.width, FlxG.height, FlxColor.BLACK);
		add(bg);

		warnText = new FlxText(0, 0, FlxG.width, "", 32);
		warnText.setFormat("VCR OSD Mono", 32, FlxColor.WHITE, CENTER);
		warnText.screenCenter(Y);
		add(warnText);
	}

	override function update(elapsed:Float)
	{
		if(!leftState) {
			if (controls.ACCEPT) {
				leftState = true;
                var poop:String = Highscore.formatSong(cheaterSong, 1);
				PlayState.SONG = Song.loadFromJson(poop, cheaterSong);
			}
		}
		super.update(elapsed);
	}
}
